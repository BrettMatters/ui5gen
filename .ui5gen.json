{
    //Root level of source code, used to auto determine namespace of files
    "sourceRoot": "UI5Gen",
    //Root namespace of application to be used  
    "rootNamespace": "application",
    //Default namespace for views and fragments
    "defaultXmlNamespace": "sap.m",
    //
    "additionalXmlNamespaces": [
        {
            "prefix": "l",
            "uri": "sap.ui.layout"
        }
    ],
    //Controller class used as the default parent for new controllers
    "defaultControllerParent": "application/views/common/Controller",
    //Register any default files to be included in the controller sap.ui.define statement
    "defaultControllerDependencies": [
        {
            "uri": "application/utils/Moment",
            "name": "Moment"
        }
    ],
    //Register re-usable parent controllers which can be selected using optional [parentController] argument
    "parentControllers": [
        {
            "id": "Dialog",
            "uri": "application/views/common/DialogController"
        }
    ],
    //Validator class used as the default parent for new validators
    "defaultValidatorParent": "application/views/common/Validator",
    //Register any default files to be included in the validator sap.ui.define statement
    "defaultValidatorDependencies": [
        {
            "uri": "application/utils/Moment",
            "name": "Moment"
        }
    ]
}